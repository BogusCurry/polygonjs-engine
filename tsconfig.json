{
	// https://www.typescriptlang.org/docs/handbook/compiler-options.html
	"compilerOptions": {
		// rules
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": false,
		"noUnusedLocals": true,
		"strict": true,

		// decorators
		"experimentalDecorators": true,

		// output & paths
		"outDir": "./dist/",
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node", // https://vuejs.org/v2/guide/typescript.html
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true, // for lodash imports (https://github.com/lodash/lodash/issues/3192)
		"allowJs": true,
		"sourceMap": true,

		// declaration creates problems with anonymous classes from mixins
		// but trying again to have a module export
		"declaration": false, // false in dev to avoid having a long list of displayed files
		// "declarationDir": "./dist/types", // declarationDir cannot be set if declaration is false

		"importHelpers": true
	},
	// "include": ["./**/*.ts", "./**/*.vue"],
	"exclude": ["node_modules", "modules", "dist", "public"]
}
