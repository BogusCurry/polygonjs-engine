{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"sourceMap": true,
		// declaration creates problems with anonymous classes from mixins
		// "declaration": true,
		// "declarationDir": "./dist/types",
		"experimentalDecorators": true,
		"importHelpers": true,
		"baseUrl": "./",
		"paths": {
			"src": ["src"],
			"modules": ["modules"],
			"tests": ["tests"]
		}
	},
	"exclude": ["node_modules", "modules"]
}
